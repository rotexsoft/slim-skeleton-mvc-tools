{
    "name": "rotexsoft/slim3-skeleton-mvc-tools",
    "type": "library",
    "description": "A support package for the SlimPHP 3 Skeleton MVC App (https://github.com/rotexsoft/slim3-skeleton-mvc-app).",
    "keywords": [ "mvc", "framework", "tools", "utils"],
    "homepage": "https://github.com/rotexsoft/slim3-skeleton-mvc-tools",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Rotimi Adegbamigbe",
            "email": "rotexdegba007-slim3.skeleton.mvc.tools@yahoo.ca",
            "homepage": "https://github.com/rotexdegba",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.6.0",
        "slim/slim": "^3.0",
        "rotexsoft/file-renderer": "^1.0.0",
        "vespula/log": "^1.1.0",
        "vespula/auth": "^0.2.5",
        "sebastian/exporter": "^3.0 || ^2.0 || ^1.2",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5 || ^6.5 || ^5.7",
        "php-coveralls/php-coveralls": "^1.0 || ^2.0"
    },
    "autoload": {
        "classmap": ["src/"],
        "files": ["src/functions/framework-helpers.php", "src/functions/str-helpers.php"]
    },
    "autoload-dev": {
        "classmap": ["src/", "tests/"],
        "files": ["src/functions/framework-helpers.php", "src/functions/str-helpers.php"]
    },
    "bin": ["src/scripts/s3mvc-create-controller", "src/scripts/s3mvc-create-controller-wizard"]
}
